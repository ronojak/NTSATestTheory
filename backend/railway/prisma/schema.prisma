generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  passwordHash String
  name      String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[]
  payments      Payment[]
  passwordResets PasswordReset[]
}

model Subscription {
  id        String   @id @default(cuid())
  userId    String   @unique
  status    String   @default("free") // free | active | expired
  planType  String?
  startDate DateTime?
  endDate   DateTime?
  expiryDate DateTime?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Payment {
  id        String   @id @default(cuid())
  userId    String?
  provider  String   // mpesa | paystack
  status    String   @default("PENDING") // PENDING | PAID | FAILED | CANCELLED | TIMEOUT
  planId    String?
  amount    Int?
  currency  String?  @default("KES")

  // Paystack
  reference String?  @unique
  checkoutUrl String?

  // M-PESA
  merchantRequestId String?
  checkoutRequestId String?
  mpesaReceipt String?
  phone       String?
  resultCode  Int?
  resultDesc  String?

  rawInitJson Json?
  rawCallbackJson Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([provider, status])
  @@index([checkoutRequestId])
  @@index([merchantRequestId])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
